<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<style>
    .col-5{
        margin: 10px auto;
    }

</style>
<h1 style="text-align:center; margin: 10px;"><a href="/" class="btn btn-primary"> Home</a></h1>
<div class="row">
    
    <div class="col-5 forms-container justify-content-center align-items-center" style="text-align:center">
        <form action="/create" method="POST">
            <div class="form-group">
            <label for="name">Contact's Name</label>
            <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="number" class="form-control" id="phone" name="phone">
            </div>
            <button type="submit" class="btn btn-primary">Add to contacts</button>
        </form>
        <br> 
        <h5>Find by name/number or a combination </h5>
        <form action="/" method="POST">
            <div class="form-group">
            <label for="name-search">Name to find</label>
            <input type="text" class="form-control" id="name-search" name="nameLike">
            </div>
            <div class="form-group">
            <label for="phoneSearch">Phone Number to find</label>
            <input type="number" class="form-control" id="phone-search" name="phoneLike">
            </div>
            <button type="submit" class="btn btn-primary">Find</button>
        </form>
    </div>
    
    <div class="col-5 table-container justify-content-center align-items-center" style="text-align:center"">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
            <% for (person of persons) {%>
                <tr>
                    <td><%= person.name %></td>
                    <td><%= person.phone %></td>
                    <td><a href='/edit-page/?id=<%= person.id %>&name=<%= person.name %>&phone=<%= person.phone %>' style="color: inherit;"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                    <td><a href='/delete/<%= person.id %>' style="color: inherit;"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                </tr>
            <%}%>
        </tbody>
    </table>
    </div>
</div>

    



